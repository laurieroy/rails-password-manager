<%= form_with model: password do |f| %>
  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |f| %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
        <%= message %>
      </div
    <% end %>
  <% end %>

  <div class="mb-4">
    <%= f.label :url %>
    <%= f.url_field :url %>
  </div>

  <div class="mb-4">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="mb-4">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div>
    <%= f.submit %>
    <%= button_tag "Delete", form: "delete_password", class: "px-4 py-2 bg-red-500 text-white font-semibold rounded-md" if current_user_password.deletable? %>
  </div>
<% end %>

<%= form_with model: password, id: "delete_password", method: :delete, data: {turbo_confirm: "Are you sure?"} %>
