<%= form_with model: password do |f| %>
  <% if f.object.errors.any? %>
    <% f.object.errors.full_messages.each do |f| %>
      <div class="alert alert-danger">
        <%= message %>
      </div
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :url %>
    <%= f.url_field :url %>
  </div>

  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.text_field :password %>
  </div>

  <div>
    <%= f.submit %>
    <%= button_tag "Delete", form: "delete_password", class: "btn btn-danger" %>
  </div>
<% end %>

<%= form_with model: password, id: "delete_password", method: :delete, data: {turbo_confirm: "Are you sure?"} %>
