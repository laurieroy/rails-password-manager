<%= form_with model: [user_password], url: password_shares_path(password) do |f| %>

  <div>
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, password.shareable_users, :id, :email %>
  </div>

  <div>
    <%= f.label :role %>
    <%= f.select :role, UserPassword::ROLES.map{ |r| [r.titleize, r] } %>
  </div>

  <div>
    <%= f.submit "Share" %>
  </div
<% end %>